alias runon='./bazel-bin/common/framework/stack_run --logtostderr -s --policy ~/av/experimental/clint/configs/clint_logging.cfg --config'
alias scryoff='scry --stack_host "" --config /opt/aurora/etc/config/scry/planner.cfg --offboard'
alias scryon='scry --stack_host "" --config /opt/aurora/etc/config/scry/planner.cfg'
alias scrystack='./bazel-bin/visualization/scry/scry --config ~/av/experimental/clint/configs/clint_scry.cfg --stack_host localhost'
