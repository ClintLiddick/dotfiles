#!/bin/bash

export TERM="xterm-256color"
export EDITOR="emacsclient -t"
export VISUAL="emacsclient -c -a emacs"

alias dig='dig +search'
alias sd='source devel/setup.bash'
alias cb='catkin build'
alias rosmasterherb='export ROS_MASTER_URI=http://herb0.personalrobotics.ri.cmu.edu:11311'
alias e='emacsclient -nw'
alias ext_monitor='xrandr --output HDMI2 --right-of eDP1 --mode 1920x1080'
alias rustup='curl https://sh.rustup.rs -sSf | sh'
alias showpings='sudo tcpdump -i eth0 icmp and icmp[icmptype]=icmp-echo'

function ext_monitor {
    if [ -z "$1" ]
    then
        echo "provide mode parameter"
        return 1
    else
        return xrandr --output HDMI1 --mode $1 --right-of eDP1
    fi
}

source $HOME/dotfiles/base16-shell/base16-solarized.light.sh

#source /opt/ros/indigo/setup.bash

export WORKON_HOME=~/.envs
source /usr/share/virtualenvwrapper/virtualenvwrapper.sh

export PATH=~/sdk/emsdk_portable/emscripten/master:~/.cargo/bin:~/.cabal/bin:/opt/arduino-1.6.9:/opt/node-current/bin:$PATH

export DEBEMAIL="clint@clintonliddick.com"
export DEBFULLNAME="Clinton Liddick"

alias dquilt="quilt --quiltrc=${HOME}/.quiltrc-dpkg"
complete -F _quilt_completion $_quilt_complete_opt dquilt

export RUST_SRC_PATH=/usr/local/src/rust/src
