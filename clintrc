#!/bin/bash

alias cb='catkin build'
alias dig='dig +search'
alias dumpcore='ulimit -c unlimited'
alias e='emacsclient -nw'
alias filemanager='xfe'
alias rosmasterherb='export ROS_MASTER_URI=http://herb0.personalrobotics.ri.cmu.edu:11311'
alias sd='source devel/setup.bash'
alias weather='curl http://wttr.in/Pittsburgh'

# Setup Debian packaging
export DEBEMAIL="clint@clintonliddick.com"
export DEBFULLNAME="Clinton Liddick"

alias dquilt="quilt --quiltrc=${HOME}/.quiltrc-dpkg"
complete -F _quilt_completion $_quilt_complete_opt dquilt

# rustc source location for racer
# export RUST_SRC_PATH="$HOME/.multirust/toolchains/nightly-x86_64-unknown-linux-gnu/lib/rustlib/src/rust/src"

# The next line updates PATH for the Google Cloud SDK.
if [ -f /home/clint/sdk/google-cloud-sdk/path.bash.inc ]; then
  source '/home/clint/sdk/google-cloud-sdk/path.bash.inc'
fi

# The next line enables shell command completion for gcloud.
if [ -f /home/clint/sdk/google-cloud-sdk/completion.bash.inc ]; then
  source '/home/clint/sdk/google-cloud-sdk/completion.bash.inc'
fi

# added by travis gem
[ -f /home/clint/.travis/travis.sh ] && source /home/clint/.travis/travis.sh
