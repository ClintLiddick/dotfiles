alias dockerclean='docker images | rg "<none>" | awk '\''{ print $3 }'\'' | xargs docker rmi'
alias dual_monitor='xrandr --output DP-0 --auto --output HDMI-0 --auto --right-of DP-0'
alias ext_monitor='xrandr --output DP-0 --off --output HDMI-0 --auto'
alias ext_monitor_off='xrandr --output DP-0 --auto --output HDMI-0 --off'
alias filemanager='xfe'
alias generate_passphrase='rg -e "^[a-z]+$" /usr/share/dict/words | sort -R | head -25 | xargs -L 5 echo'
alias maximum_power='for i in {0..7}; do sudo cpufreq-set -g performance -c "$i"; done'
alias holdmybeer='sudo'
alias perfit='sudo perf record --call-graph dwarf'
alias present_monitor='xrandr --output HDMI-2 --right-of eDP-1 --mode 1920x1080'
