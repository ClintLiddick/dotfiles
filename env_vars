#!/bin/bash

export TERM="rxvt-unicode-256color"
export EDITOR="emacsclient -t"
export VISUAL="emacsclient -c -a emacs"

export HISTFILESIZE=
export HISTSIZE=
export HISTIMEFORMAT="[%F %T] "
export HISTFILE=~/.bash_eternal_history
export PROMPT_COMMAND="history -a; $PROMPT_COMMAND"

export AV=$HOME/av
export PYTHONPATH=$AV/bazel-bin:$AV/bazel-genfiles:$AV/bazel-av:$AV:$PYTHONPATH

export GOPATH=$HOME/gopath

PATH_DIRS=(
    /opt/arduino-1.6.9
    /opt/emsdk-portable
    /opt/node-current/bin
    /usr/lib/go-1.8/bin
    /usr/local/cuda-8.0/bin
    ~/.cabal/bin
    ~/.cargo/bin
    ~/.local/bin
    ~/.luarocks/bin
    ~/.rvm/bin
    ~/bin
    $GOPATH
    $GOPATH/bin
    ~/node_modules/.bin
    ~/sdk/android-sdk-linux/platform-tools
    ~/sdk/android-sdk-linux/tools
    ~/sdk/emsdk_portable/emscripten/master
)

for pd in ${PATH_DIRS[*]}; do
    if [ -d $pd ]
    then
        PATH="$pd:$PATH"
    fi
done
